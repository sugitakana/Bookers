<% if flash[:notice] %>
 <p id="notice">
     <%= flash[:notice] %>
 </p>
<% end %>

<div class="index-title">
 <h2>Books</h2>
</div>
 <table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
   <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>

     <td><%= link_to "Show", book_path(book.id), class: "link" %></td>
     <td><%= link_to "Edit", edit_book_path(book.id), class: "link" %></td>
     <td><%= link_to "Destroy", book_path(book.id), class: "link" ,method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
   <% end %>
 </table>
</div>

<div class="new-title">
 <h3>New book</h3>
</div>

<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
  <div class="error_explanation">
   <h5><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h5>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
  </div>
 <% end %>

 <div class="new">
  <p>Title</p>
  <%= f.text_field :title %>
  </div>
  <div class="new">
   <p>Body</p>
   <%= f.text_area :body %>
  </div>
  <div class="new">
  <%= f.submit 'Create Book', class: "submit" %>
 </div>
<% end %>